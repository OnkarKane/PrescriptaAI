<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context=".fragments.PatientsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Patients"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_margin="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPatients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_patient" />

    <TextView
        android:id="@+id/tvNoPatients"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="No patients recorded yet. Scan a prescription to add one!"
        android:gravity="center"
        android:textSize="18sp"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout>